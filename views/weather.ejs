<%- include('header') -%>

  <div class="main-container">
    <div class="logo">
      <img class="logoImg" src="images/logo.png" width="50px" height="50px" alt="logo">
      <h3>Find My Weather</h3>
    </div>

    <div class="cloud-container">
      <div class="left-cloud">
        <div class="cloud"></div>
      </div>
      <div class="moon"></div>
      <div class="right-cloud">
        <div class="cloud"></div>
      </div>
    </div>

    <form action="/" method="post">
      <div class="search">
        <input class="input blurBg <%= border %> " id="cityname" type="text" name="cityName"
          placeholder="<%=placeholder%>" autocomplete="off" required>
        <button class="btn" type="submit" name="button">GO</button>
      </div>
    </form>


  </div>

  <%- include('footer') -%>